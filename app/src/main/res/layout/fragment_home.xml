<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back, Alex"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue_course"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:text="Continue Last Course"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/primary"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_favorites"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:text="View Favorite Courses"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/primary"
            app:cornerRadius="8dp" />

        <TextView
            android:id="@+id/tv_stamp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stamp Progress"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_stamp_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stamps Collected: 5/10"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progress_stamp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50" />
    </LinearLayout>

</ScrollView>
